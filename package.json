{
  "name": "@alphaxp/base",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16",
    "yarn": "1"
  },
  "scripts": {
    "clean": "rm -rf dist **/.cache *.log",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "node ./server/index.js",
    "format": "prettier --write '**/*.{css,html,js,json,md,ts,tsx,yaml}'",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:css": "stylelint --fix '**/*.css'",
    "lint:js": "eslint --fix --ext .js,.ts,.tsx ./",
    "lint:types": "tsc --noEmit",
    "pretest": "yarn lint",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "storybook": "ladle serve --port 6006",
    "storybook:build": "ladle build"
  },
  "dependencies": {
    "debug": "4.3.3",
    "express": "4.17.3",
    "undici": "4.15.1"
  },
  "devDependencies": {
    "@heroicons/react": "1.0.6",
    "@ladle/react": "0.8.3",
    "@tailwindcss/forms": "0.5.0",
    "@tailwindcss/typography": "0.5.2",
    "@types/debug": "4.1.7",
    "@types/express": "4.17.13",
    "@types/node": "17.0.21",
    "@types/prettier": "2.4.4",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.13",
    "@types/react-test-renderer": "17.0.1",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "autoprefixer": "10.4.4",
    "cssnano": "5.1.4",
    "esbuild-runner": "2.2.1",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "happy-dom": "2.49.0",
    "husky": "7.0.4",
    "nock": "13.2.4",
    "playwright": "1.20.0",
    "postcss": "8.4.12",
    "postcss-preset-env": "7.4.2",
    "prettier": "2.6.0",
    "prettier-plugin-tailwindcss": "0.1.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "2.70.1",
    "stylelint": "14.6.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-order": "5.0.0",
    "supertest": "6.2.2",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2",
    "vite": "2.8.6",
    "vitest": "0.6.3"
  }
}
