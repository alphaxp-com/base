{
  "name": "@alphaxp/base",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14"
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist **/.cache *.log",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "node ./server/index.js",
    "format": "prettier --write '**/*.{css,html,js,json,md,ts,tsx,yaml}'",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:css": "stylelint --fix '**/*.css'",
    "lint:js": "eslint --fix --ext .js,.ts,.tsx ./",
    "lint:types": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "dependencies": {
    "debug": "4.3.1",
    "express": "4.17.1",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.3.2",
    "@tailwindcss/typography": "0.4.1",
    "@types/jest": "26.0.23",
    "@types/node": "15.6.1",
    "@types/node-fetch": "2.5.10",
    "@types/react": "17.0.8",
    "@types/react-dom": "17.0.5",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "@vitejs/plugin-react-refresh": "1.3.3",
    "autoprefixer": "10.2.6",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "jest": "27.0.3",
    "nock": "13.1.0",
    "postcss": "8.3.0",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "supertest": "6.1.3",
    "tailwindcss": "2.1.2",
    "typescript": "4.3.2",
    "vite": "2.3.5"
  }
}
